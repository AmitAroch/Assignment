<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ItemTitle">
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textSize">20sp</item>
        <item name="maxLines">1</item>
        <item name="android:gravity">start</item>
        <item name="android:textDirection">ltr</item>
        <item name="android:textStyle">bold</item>
        <item name="android:text">@string/loading</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="ItemSubTitle">
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textSize">16sp</item>
        <item name="maxLines">1</item>
        <item name="android:gravity">start</item>
        <item name="android:text">@string/loading</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="NoNetworkText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="background">@color/red</item>
        <item name="android:text">@string/network_not_available_text</item>
        <item name="maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="ItemExtraInfo">
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textSize">14sp</item>
        <item name="android:text">@string/loading</item>
        <item name="maxLines">1</item>
        <item name="android:gravity">start</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="ItemUserImage">
        <item name="android:layout_margin">10dp</item>
        <item name="android:src">@mipmap/ic_launcher</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="LoadStateItem">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:backgroundTint">?attr/colorSecondary</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:text">@string/load_state_button_text</item>
    </style>

    <style name="LoadStateItemErrorMessage">
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">32dp</item>
    </style>

</resources>